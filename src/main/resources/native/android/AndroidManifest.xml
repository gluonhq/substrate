    <uses-sdk a:minSdkVersion="21" a:targetSdkVersion="28"/>
    <uses-permission a:name="android.permission.INTERNET"/>
    <uses-permission a:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission a:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application a:label='A HelloGraal' a:icon="@mipmap/ic_launcher">
        <activity a:name='com.gluonhq.helloandroid.MainActivity' a:configChanges="orientation|keyboardHidden">
             <intent-filter>
                <category a:name='android.intent.category.LAUNCHER'/>
                <action a:name='android.intent.action.MAIN'/>
             </intent-filter>
        </activity>
        <activity a:name='com.gluonhq.helloandroid.PermissionRequestActivity'/>
    </application>
</manifest>

